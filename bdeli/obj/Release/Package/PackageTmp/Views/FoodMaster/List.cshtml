@model IEnumerable<bdeli.Models.bD_Food>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý thực đơn</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Danh sách món ăn</h4>
                            </div>
                            <div class="align-self-center">
                                <a class="btn btn-success" style="position:absolute;top:15px;right:37px" href="/foodmaster/create">Thêm</a>
                            </div>
                        </div>
                        <div class="section-body">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên món ăn</th>
                                            <th>Giá tiền</th>
                                            <th>Mô tả </th>
                                            <th>Loại món ăn</th>
                                            <th>Hình ảnh</th>
                                            <th>Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td><a href="/foodmaster/edit/@item.ID">@item.Name</a></td>
                                                <td>@item.Price</td>
                                                @if (item.Description != null)
                                                {
                                                    if (item.Description.Count() > 25)
                                                    {
                                                        <td>@item.Description.Substring(0, 25) ...</td>
                                                    }
                                                    else
                                                    {
                                                        <td>@item.Description</td>
                                                    }
                                                }
                                                <td>@item.Type</td>
                                                <td>@item.Image</td>
                                                <td><a href="/foodmaster/delete/@item.ID"><img src="~/Images/webmaster/icon/if_f-cross_256_282471.png" /></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
