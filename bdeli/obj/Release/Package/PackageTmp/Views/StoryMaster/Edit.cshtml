@model IQueryable<bdeli.Models.bD_Introduce>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa câu chuyện</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa hình ảnh hiển thị và nội dung câu chuyện</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/storymaster/edit" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề của câu chuyện (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input type="text" class="form-control" placeholder="" name="title" value="@Model.FirstOrDefault().Title">
                                </div>
                                <div class="row ">
                                    <div class="col-lg-4">
                                        @if (Model.FirstOrDefault().Images != null)
                                        {
                                            if (Model.FirstOrDefault().Images.Contains(","))
                                            {
                                                arrStr = Model.FirstOrDefault().Images.Split(',');
                                                <div class="form-group">
                                                    <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                    <br />
                                                    <input type="file" name="images" accept="image/*" multiple="multiple" />
                                                    <div class="row">
                                                        @foreach (var img in arrStr)
                                                        {

                                                            <div class="col-sm-3 bg-slider" style="background: url('../../Images/b.Deli/imageHome/@img') center center no-repeat / cover;">
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-group">
                                                    <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                    <br />
                                                    <input type="file" name="images" accept="image/*" multiple="multiple" />
                                                    <img src="~/Images/b.Deli/imageHome/@Model.FirstOrDefault().Images" style="width:100%" />
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="form-group">
                                                <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                <br />
                                                <input type="file" name="images" accept="image/*" multiple="multiple" />
                                            </div>
                                        }
                                    </div>
                                    <div class="col-lg-4">
                                        @if (Model.FirstOrDefault().Images1 != null)
                                        {
                                            if (Model.FirstOrDefault().Images1.Contains(","))
                                            {
                                                arrStr = Model.FirstOrDefault().Images1.Split(',');
                                                <div class="form-group">
                                                    <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                    <br />
                                                    <input type="file" name="images1" accept="image/*" multiple="multiple" />
                                                    <div class="row">
                                                        @foreach (var img in arrStr)
                                                        {

                                                            <div class="col-sm-3 bg-slider" style="background: url('../../Images/b.Deli/imageHome/@img') center center no-repeat / cover;">
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-group">
                                                    <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                    <br />
                                                    <input type="file" name="images1" accept="image/*" multiple="multiple" />
                                                    <img src="~/Images/b.Deli/imageHome/@Model.FirstOrDefault().Images1" style="width:100%" />
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="form-group">
                                                <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                <br />
                                                <input type="file" name="images1" accept="image/*" multiple="multiple" />
                                            </div>
                                        }
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Tiêu đề nhỏ (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input type="text" class="form-control" placeholder="" name="subtitle" value="@Model.FirstOrDefault().Subtitle">
                                        </div>

                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Description (VUI LÒNG NHẬP DƯỚI 1000 KÍ TỰ)</label>
                                            <textarea name="des" class="form-control" maxlength="1000" rows="20" cols="50" style="height: 200px">@Model.FirstOrDefault().Description</textarea>
                                        </div>


                                    </div>
                                    <input class="btn btn-primaryt" type="submit" value="Lưu" />
                                </div>
                            </form> 
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
        CKEDITOR.replace('editor');
</script>
<script>
    CKEDITOR.replace('textb');
    CKEDITOR.replace('texta');
    CKEDITOR.replace('textc');

</script>