@model  IEnumerable < bdeli.Models.GiftMaster >
@{ 
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lí quà tặng</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa quà tặng</h4>
                            </div>
                        </div>
                        <form action="/giftmaster/edit" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tên quà tặng</label>
                                    <input type="text" id="namegift" name="namgift" class="form-control" value="@Model.FirstOrDefault().gift.FirstOrDefault().Name">
                                    <input type="hidden" name="id" value="@Model.FirstOrDefault().gift.FirstOrDefault().ID"/>
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <input type="text" style=" height:100px" id="mota" name="mota" class="form-control" value="@Model.FirstOrDefault().gift.FirstOrDefault().Description">
                                </div>
                                @if (Model.FirstOrDefault().gift.FirstOrDefault().Image != null)
                                {
                                    arrStr = Model.FirstOrDefault().gift.FirstOrDefault().Image.Split(',');
                                    <div class="form-group">
                                        <label>Hình Ảnh</label>
                                        <input type="file" name="image" accept="image/*" multiple="multiple" />
                                        <div class="row">
                                            @foreach (var img in arrStr)
                                            {

                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/b.Deli/imageGift/@img') center center no-repeat / cover;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                               
                                else
                                {
                                <div class="form-group">
                                    <label for="exampleFormControlFile1">Hình ảnh</label>
                                    <br />
                                    <input type="file" name="image" accept="image/*" multiple="multiple" />
                                </div>
                                }
                                <div class="form-group">
                                    <label>Giá tiền</label>
                                    <input type="text" style="width:50%" id="gia" name="gia" class="form-control input-numeral" value="@Model.FirstOrDefault().gift.FirstOrDefault().Price">
                                </div>
                                <div class="form-group">
                                    <label ">Loại quà</label>
                                    <select style="width:50%" id="loaigift" name="loaigift" class="form-control">
                                        @foreach (var item in Model.FirstOrDefault().type)
                                        {
                                            <option value="@item.ID">@item.Type</option>
                                        }

                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Lưu </button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

