@model IQueryable<bdeli.Models.bD_Video>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa video</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa Video</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/video/edit" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Title (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" placeholder="" name="title" value="@Model.FirstOrDefault().Title">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Description (VUI LÒNG NHẬP DƯỚI 1000 KÍ TỰ)</label>
                                    <textarea name="des" class="form-control" maxlength="1000" rows="20" cols="50" style="height: 200px">@Model.FirstOrDefault().Description</textarea>
                                </div>

                                @if (Model.FirstOrDefault().Video != null)
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Video hiển thị</label>
                                        <br />
                                        <input type="file" name="video" accept="video/*" />
                                        <video  muted loop autoplay>
                                            <source src="~/Video/@Model.FirstOrDefault().Video" type="video/mp4">
                                            <source src="~/Content/NaturalLife/video/naturalLife.ogg" type="video/ogg">
                                            Your browser does not support the video tag.
                                        </video>
                                    </div>

                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Video hiển thị</label>
                                        <br />
                                        <input type="file" name="video" accept="video/*" />
                                    </div>
                                }
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>

