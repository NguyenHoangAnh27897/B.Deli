@model IEnumerable<bdeli.Models.bD_DrinkType>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lí thực đơn</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thêm thức uống</h4>
                            </div>
                        </div>
                        <form action="/drinkmaster/create" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tên thức uống</label>
                                    <input type="text" id="tenmonan" name="tenmonan" class="form-control" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <input type="text" style=" height:100px" id="mota" name="mota" class="form-control" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Hình Ảnh</label>
                                    <input type="file" name="image" accept="image/*" multiple="multiple" />
                                </div>

                                <div class="form-group">
                                    <label>Giá tiền</label>
                                    <input type="text" style="width:50%" id="gia" name="gia" class="form-control input-numeral" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Loại thức uống</label>
                                    <select style="width:50%" id="loai" name="loaimonan" class="form-control">
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.ID">@item.DrinkType</option>
                                        }

                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Thêm mới</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

