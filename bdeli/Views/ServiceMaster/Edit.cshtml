                                            </div>
                                        }
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Tiêu đề (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input type="text" class="form-control" placeholder="" name="title1" value="@Model.FirstOrDefault().Title1" maxlength="50">
                                        </div>

