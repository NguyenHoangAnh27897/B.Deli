                            <form action="/servicemaster/edit" method="post" enctype="multipart/form-data">

                                <div class="row ">
                                    <div class="col-lg-4">
                                        @if (Model.FirstOrDefault().Images1 != null)
                                        {
                                            if (Model.FirstOrDefault().Images1.Contains(","))
                                            {
                                                arrStr = Model.FirstOrDefault().Images1.Split(',');
