@model IQueryable<bdeli.Models.bD_Contact>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa liên hệ</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa liên hệ</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/contacts/edit" method="post" enctype="multipart/form-data">

                                <div class="row ">
                                    <div class="col-lg-6">

                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Title (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input type="text" maxlength="50" class="form-control" placeholder="" name="title" value="@Model.FirstOrDefault().Title">
                                        </div>

                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Description (VUI LÒNG NHẬP DƯỚI 1000 KÍ TỰ)</label>
                                            <textarea name="des" class="form-control" maxlength="1000" rows="20" cols="50" style="height: 240px">@Model.FirstOrDefault().Description</textarea>
                                        </div>                                      
                                   
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Email (VUI LÒNG NHẬP DƯỚI 100 KÍ TỰ)</label>
                                            <input type="text" class="form-control" placeholder="" name="email" value="@Model.FirstOrDefault().Email">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Address (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                            <input type="text" class="form-control" placeholder="" name="add" value="@Model.FirstOrDefault().Address">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Phone (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input type="text" class="form-control" placeholder="" name="sdt" value="@Model.FirstOrDefault().Phone">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Hotline (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input type="text" class="form-control" placeholder="" name="hot" value="@Model.FirstOrDefault().Hotline">
                                        </div>
                                    </div>
                                </div>
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('textb');
    CKEDITOR.replace('texta');
    CKEDITOR.replace('textc');

</script>

