
@model IEnumerable<bdeli.Models.bD_Booking>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách đặt bàn</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start table basic -->
        <div class="basic-table">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-table">
                        <div class="section-head">
                            <div class="title">
                                <h4>Danh sách đặt bàn</h4>
                            </div>
                        </div>
                        <div class="section-body">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên khách hàng</th>
                                            <th>Email</th>
                                            <th>Ngày đặt </th>
                                            <th>Thời gian đặt</th>
                                            <th>Số lượng khách</th>
                                            <th>Lời nhắn</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.id</td>
                                                <td>@item.Name</td>
                                                <td>@item.Email</td>
                                                <td>@item.DateBooking</td>
                                                <td>@item.TimeBooking</td>
                                                <td>@item.Amount</td>
                                                <td>@item.Note</td>

                                                <td><a href="/booking/delete/@item.id"><img src="~/Images/webmaster/icon/if_f-cross_256_282471.png" /></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

